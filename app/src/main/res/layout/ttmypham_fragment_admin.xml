<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên mỹ phẩm: "
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/txtTenMP"
                    android:layout_width="240sp"
                    android:layout_height="wrap_content"
                    />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dung tích: "
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/txtDungTich"
                    android:layout_width="240sp"
                    android:layout_height="wrap_content"
                    />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loại mỹ phẩm: "
                    android:textSize="20sp"/>

                <Spinner
                    android:id="@+id/spinnerLoaiMP"
                    android:layout_width="240sp"
                    android:layout_height="40sp"
                    />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Ảnh sản phẩm:"
                    android:layout_gravity="center_vertical"/>

                <LinearLayout>
                    <ImageButton
                        android:id="@+id/cameraBtn"
                        android:layout_marginLeft="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="40sp"
                        android:layout_gravity="center_vertical"
                        android:src="@android:drawable/ic_menu_camera" />

                    <ImageButton
                        android:id="@+id/folderBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="40sp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10sp"
                        android:src="@drawable/baseline_folder_open_24" />
                    <ImageView
                        android:id="@+id/imgPreview"
                        android:layout_width="130sp"
                        android:layout_height="50sp"/>
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá bán: "
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/txtGiaBan"
                    android:layout_width="240sp"
                    android:inputType="number"
                    android:layout_height="wrap_content"
                    />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mô tả: "
                    android:textSize="20sp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtMoTa"
                    android:layout_width="240sp"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mô tả" />
                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chi tiết: "
                    android:textSize="20sp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtChiTiet"
                    android:layout_width="240sp"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Chi tiết" />
                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10sp">
            <Button
                android:id="@+id/btnLamMoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Làm mới"
                android:textSize="15sp"
                android:backgroundTint="#00BCD4"/>

            <Button
                android:id="@+id/btnThem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm"
                android:textSize="15sp"
                android:layout_marginLeft="10sp"
                android:backgroundTint="#00BCD4"/>

            <Button
                android:id="@+id/btnSua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sửa"
                android:textSize="15sp"
                android:layout_marginLeft="10sp"
                android:backgroundTint="#00BCD4"/>

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_ttmypham"
            android:layout_width="match_parent"
            android:layout_height="600sp"/>

    </LinearLayout>
</ScrollView>