<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BCE0FF"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10sp">
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Tên khách hàng:"
                    android:textColor="#9A9A9A" />
                <EditText
                    android:id="@+id/txtTenKH"
                    android:inputType="text"
                    android:layout_width="200sp"
                    android:layout_marginLeft="10sp"
                    android:layout_height="40sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Địa chỉ:"
                    android:textColor="#9A9A9A" />
                <EditText
                    android:id="@+id/txtDiaChi"
                    android:inputType="text"
                    android:layout_width="200sp"
                    android:layout_marginLeft="10sp"
                    android:layout_height="40sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Số điện thoại:"
                    android:textColor="#9A9A9A" />
                <EditText
                    android:id="@+id/txtSDT"
                    android:inputType="text"
                    android:layout_width="200sp"
                    android:layout_marginLeft="10sp"
                    android:layout_height="40sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Ngày bán:"
                    android:textColor="#9A9A9A"
                    android:layout_gravity="center_vertical"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp">
                    <EditText
                        android:padding="6dp"
                        android:id="@+id/edBirthday"
                        android:hint="Ngày bán"
                        android:layout_width="190sp"
                        android:layout_height="40dp"/>
                    <ImageView
                        android:id="@+id/imgdate"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/calendar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                </LinearLayout>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Tên mỹ phẩm:"
                    android:textColor="#9A9A9A" />
                <Spinner
                    android:id="@+id/spinnerMP"
                    android:layout_width="200sp"
                    android:layout_height="30sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Số lượng:"
                    android:textColor="#9A9A9A" />
                <EditText
                    android:id="@+id/txtSoLuong"
                    android:inputType="number"
                    android:layout_width="200sp"
                    android:layout_marginLeft="10sp"
                    android:layout_height="40sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Đơn giá:"
                    android:textColor="#9A9A9A" />
                <EditText
                    android:id="@+id/txtDonGia"
                    android:inputType="number"
                    android:layout_width="200sp"
                    android:layout_marginLeft="10sp"
                    android:layout_height="40sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Tổng tiền:"
                    android:textColor="#9A9A9A" />
                <EditText
                    android:id="@+id/txtTongTien"
                    android:inputType="number"
                    android:layout_width="200sp"
                    android:layout_marginLeft="10sp"
                    android:layout_height="40sp"/>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10sp">

            <Button
                android:id="@+id/btnMoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Làm mới"
                android:textSize="15sp"
                android:backgroundTint="#00BCD4"/>

            <Button
                android:id="@+id/btnThem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm"
                android:textSize="15sp"
                android:layout_marginLeft="10sp"
                android:backgroundTint="#00BCD4"/>

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_hoadonban"
            android:layout_width="match_parent"
            android:layout_height="600sp"/>
    </LinearLayout>
</ScrollView>