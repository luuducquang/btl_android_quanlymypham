<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/item_nhacungcap_admin"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp">
        <TextView
            android:id="@+id/item_tenncc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bioderma"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#6C6C6C"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33sp"
        android:layout_marginLeft="20sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ: "
            android:textSize="15sp"
            android:textColor="#7C7C7C"/>
        <TextView
            android:id="@+id/item_diachincc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiên Lữ - Hưng Yên"
            android:textSize="15sp"
            android:textColor="#7C7C7C"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55sp"
        android:layout_marginLeft="20sp"
        android:paddingBottom="3sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại: "
            android:textSize="15sp"
            android:textColor="#7C7C7C"/>
        <TextView
            android:id="@+id/item_sdtncc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0894545123"
            android:textSize="15sp"
            android:textColor="#7C7C7C"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>