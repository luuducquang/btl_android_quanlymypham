<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10sp">
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Nhà cung cấp:"
                    android:textColor="#9A9A9A" />
                <Spinner
                    android:id="@+id/spinnerNCC"
                android:layout_width="250sp"
                android:layout_height="40dp"
                    android:background="@drawable/search"
                    android:layout_marginLeft="10dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Ngày nhập:"
                    android:textColor="#9A9A9A"
                    android:layout_gravity="center_vertical"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp">
<!--                    <EditText-->
<!--                        android:padding="6dp"-->
<!--                        android:id="@+id/edBirthday"-->
<!--                        android:hint="Ngày nhập"-->
<!--                        android:layout_width="202sp"-->
<!--                        android:layout_height="40dp"/>-->
                    <EditText
                        android:id="@+id/edBirthday"
                        android:layout_width="202dp"
                        android:layout_height="40dp"
                        android:background="@drawable/search"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:padding="6dp"
                        android:hint="Ngày nhập"
                        android:layout_marginTop="5dp"
                        android:inputType="text"/>
                    <ImageView
                        android:id="@+id/imgdate"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/calendar"
                        android:layout_width="30dp"
                        android:layout_height="40dp"/>
                </LinearLayout>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Tên mỹ phẩm:"
                    android:textColor="#9A9A9A" />
                <Spinner
                    android:id="@+id/spinnerMP"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/search"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Số lượng:"
                    android:textColor="#9A9A9A" />
<!--                <EditText-->
<!--                    android:id="@+id/txtSoLuong"-->
<!--                    android:inputType="number"-->
<!--                    android:layout_width="200sp"-->
<!--                    android:layout_marginLeft="10sp"-->
<!--                    android:layout_height="40sp"/>-->
                <EditText
                    android:id="@+id/txtSoLuong"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/search"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:padding="6dp"
                    android:layout_marginLeft="10sp"
                    android:hint="Số lượng"
                    android:layout_marginTop="5dp"
                    android:inputType="text"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Đơn giá:"
                    android:textColor="#9A9A9A" />
<!--                <EditText-->
<!--                    android:id="@+id/txtDonGia"-->
<!--                    android:inputType="number"-->
<!--                    android:layout_width="200sp"-->
<!--                    android:layout_marginLeft="10sp"-->
<!--                    android:layout_height="40sp"-->
<!--                    android:enabled="false"/>-->
                <EditText
                    android:id="@+id/txtDonGia"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/search"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:padding="6dp"
                    android:layout_marginLeft="10sp"
                    android:hint="Đơn giá"
                    android:layout_marginTop="5dp"
                    android:inputType="text"
                    android:enabled="false"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Tổng tiền:"
                    android:textColor="#9A9A9A" />
<!--                <EditText-->
<!--                    android:id="@+id/txtTongTien"-->
<!--                    android:inputType="number"-->
<!--                    android:layout_width="200sp"-->
<!--                    android:layout_marginLeft="10sp"-->
<!--                    android:layout_height="40sp"-->
<!--                    android:enabled="false"/>-->

                <EditText
                    android:id="@+id/txtTongTien"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/search"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:padding="6dp"
                    android:layout_marginLeft="10sp"
                    android:hint="Tổng tiền"
                    android:layout_marginTop="5dp"
                    android:inputType="text"
                    android:enabled="false"/>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10sp">

            <Button
                android:id="@+id/btnMoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Làm mới"
                android:textSize="15sp"
                android:backgroundTint="#03A9F4"/>

            <Button
                android:id="@+id/btnThem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm"
                android:textSize="15sp"
                android:layout_marginLeft="10sp"
                android:backgroundTint="#4CAF50"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/searchbar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Search Here"
                android:padding="5dp"
                android:imeOptions="actionSearch"
                android:maxLines="1"
                android:layout_margin="8dp"
                android:background="@drawable/search"
                android:drawableLeft="@drawable/baseline_search_24"
                />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_hoadonnhap"
            android:layout_width="match_parent"
            android:layout_height="500sp"/>
    </LinearLayout>
</ScrollView>