<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300sp"
                android:layout_marginTop="2sp"
                android:id="@+id/line1">

                <ImageView
                    android:id="@+id/img_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/anhfb"
                    android:scaleType="centerCrop"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line1">

                <TextView
                    android:id="@+id/ten_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8sp"
                    android:text="Sữa rửa mặt dành cho da dầu nhạy cảm"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/linee"
                android:layout_marginTop="-10sp">

                <TextView
                    android:id="@+id/gia_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FF5722"
                    android:layout_marginLeft="8sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="đ"
                    android:textSize="20sp"
                    android:textColor="#FF5722"
                    android:textStyle="bold"
                    android:layout_marginLeft="5sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/line3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dung tích:"
                    android:textSize="15sp"
                    android:layout_marginLeft="8sp"/>

                <TextView
                    android:id="@+id/dungtich_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300ml"
                    android:textSize="15sp"
                    android:layout_marginLeft="5sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/line6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/line4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giới thiệu sản phẩm"
                    android:textSize="20sp"
                    android:textColor="#E91E63"
                    android:textStyle="bold"
                    android:layout_marginLeft="8sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/line6">

                <TextView
                    android:id="@+id/mota_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sữa Rửa Mặt Cetaphil Gentle Skin Cleanser phiên bản mới ra mắt năm 2022 từ thương hiệu Cetaphil"
                    android:textSize="15sp"
                    android:layout_marginLeft="8sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/line5">

                <TextView
                    android:id="@+id/chitiet_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Được chứng minh lâm sàng có khả năng làmĐược chứng minh lâm sàng có khả năng làm sĐược chứng minh lâm sàng có khả năng làm s sạch sâu, loại bỏ hoàn toàn bụi bẩn, và tạp chất trên da một cách dịu nhẹ nhưng vẫn duy trì độ ẩm tự nhiên để bảo vệ da khỏi tình trạng khô ráp, Sữa Rửa Mặt Cetaphil Mới với công thức lành tính không gây kích ứng sẽ an toàn cho mọi loại da, kể cả da nhạy cảm."
                    android:textSize="15sp"
                    android:layout_marginLeft="8sp"
                    android:paddingBottom="50sp"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="#fff"
            android:gravity="end">

            <LinearLayout
                android:layout_width="80sp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/img_gohome"
                    android:layout_width="50sp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:src="@drawable/baseline_home_24"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_themgiohang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF9800"
                android:layout_marginRight="10sp"
                android:text="Thêm vào giỏ hàng"
                app:cornerRadius="@dimen/cardview_compat_inset_shadow" />

            <Button
                android:id="@+id/btn_muangay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:backgroundTint="#4CAF50"
                android:text="Mua ngay"
                app:cornerRadius="@dimen/cardview_compat_inset_shadow" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>