<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Từ ngày:"
                android:textColor="#9A9A9A"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp">
<!--                <EditText-->
<!--                    android:padding="6dp"-->
<!--                    android:id="@+id/edBirthday"-->
<!--                    android:hint="Từ ngày"-->
<!--                    android:layout_width="190sp"-->
<!--                    android:layout_height="40dp"/>-->
                <EditText
                    android:id="@+id/edBirthday"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:background="@drawable/search"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:padding="6dp"
                    android:hint="Từ ngày"
                    android:inputType="text"/>
                <ImageView
                    android:id="@+id/imgdate"
                    android:src="@drawable/calendar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            </LinearLayout>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Đến ngày:"
                android:textColor="#9A9A9A"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp">
<!--                <EditText-->
<!--                    android:padding="6dp"-->
<!--                    android:id="@+id/edBirthday1"-->
<!--                    android:hint="Đến ngày"-->
<!--                    android:layout_width="190sp"-->
<!--                    android:layout_height="40dp"/>-->
                <EditText
                    android:id="@+id/edBirthday1"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:background="@drawable/search"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:padding="6dp"
                    android:hint="Đến ngày"
                    android:layout_marginTop="3dp"
                    android:inputType="text"/>
                <ImageView
                    android:id="@+id/imgdate1"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/calendar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5sp">
        <Button
            android:id="@+id/hoadonnhap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoá đơn nhập"/>

        <Button
            android:id="@+id/hoadonban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:text="Hoá đơn bán"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5sp">
        <Button
            android:id="@+id/banchay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bán chạy"/>

        <Button
            android:id="@+id/bancham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:text="Bán chậm"/>

        <Button
            android:id="@+id/saphet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:text="Sắp hết"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5sp">
        <ListView android:layout_width="match_parent"
            android:id="@+id/listview_thongke"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>